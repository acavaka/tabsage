# Dockerfile for A2A Agent Servers
# Usage: docker build -f Dockerfile.agent --build-arg AGENT_SERVER=services/a2a/kg_builder_server.py -t kg-builder-agent .

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files and application code
COPY pyproject.toml ./
COPY . .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -e .

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=8080
ENV PYTHONPATH=/app

# Expose port (Cloud Run uses PORT env var)
EXPOSE $PORT

# Run agent server via entrypoint script
CMD ["python", "run_agent_server.py"]
